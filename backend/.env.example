NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=banking_db
DB_USER=banking_user
DB_PASSWORD=banking_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=24h

# File Processing
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv

# Cron Schedule Configuration
# Format: minute hour day month weekday
# Examples:
#   */5 * * * *     = Every 5 minutes
#   */10 * * * *    = Every 10 minutes
#   */15 * * * *    = Every 15 minutes
#   */30 * * * *    = Every 30 minutes
#   0 * * * *       = Every hour
#   0 */2 * * *     = Every 2 hours
#   0 0 * * *       = Every day at midnight
CRON_SCHEDULE=*/5 * * * *

# Timezone for cron jobs (important for scheduling)
TZ=Africa/Tunis

# Run initial scan when server starts (true/false)
SCAN_ON_STARTUP=false

# File Scanner Configuration
# Maximum number of files to process per scan
MAX_FILES_PER_SCAN=10

# Timeout for HTTP requests (milliseconds)
HTTP_TIMEOUT=15000
