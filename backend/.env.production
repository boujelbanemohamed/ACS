NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=banking_db
DB_USER=banking_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# JWT Configuration - OBLIGATOIRE EN PRODUCTION
# Générez une clé sécurisée avec: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_KEY_WITH_OPENSSL
JWT_EXPIRE=8h

# File Processing
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv

# Cron Schedule
CRON_SCHEDULE=*/5 * * * *

# Timezone
TZ=Africa/Tunis

# Scan on startup
SCAN_ON_STARTUP=false

# File Scanner Configuration
MAX_FILES_PER_SCAN=100
HTTP_TIMEOUT=15000
